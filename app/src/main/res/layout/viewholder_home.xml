<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <TextView
        android:id="@+id/promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promotion Location" />

    <TextView
        android:id="@+id/seeOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Others"
        android:layout_toRightOf="@+id/promotion"
        android:layout_toEndOf="@+id/promotion"
        android:paddingLeft="340dp"/>


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/salon_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher"
            android:src="@drawable/men1" />

        <TextView
            android:id="@+id/salon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/salon_image"
            android:text="Rudy Salon"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/salon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/salon_name"
            android:layout_marginLeft="10dp"
            android:text="Kelapa Gading"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/salon_reviewer_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/salon_address"
            android:layout_toRightOf="@+id/review_icon"
            android:paddingLeft="@dimen/content_padding"
            android:text="400 reviewer"
            android:textColor="@color/black_50_opacity"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/salon_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/salon_image"
            android:layout_toRightOf="@+id/salon_image"
            android:layout_marginLeft="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:src="@drawable/men1" />

        <TextView
            android:id="@+id/salon_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salon_name"
            android:layout_toRightOf="@+id/salon_name"
            android:layout_below="@+id/salon_image2"
            android:layout_marginLeft="50dp"
            android:text="Rudy Salon"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/salon_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salon_address"
            android:layout_toRightOf="@+id/salon_address"
            android:layout_below="@+id/salon_name2"
            android:layout_marginLeft="50dp"
            android:text="Kelapa Gading"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/salon_reviewer_total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salon_reviewer_total"
            android:layout_toRightOf="@+id/salon_reviewer_total"
            android:layout_below="@+id/salon_address2"
            android:layout_marginLeft="50dp"
            android:paddingLeft="@dimen/content_padding"
            android:text="400 reviewer"
            android:textColor="@color/black_50_opacity"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/salon_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/salon_image2"
            android:layout_toRightOf="@+id/salon_image2"
            android:layout_marginLeft="20dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:src="@drawable/men1" />

        <TextView
            android:id="@+id/salon_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salon_name2"
            android:layout_toRightOf="@+id/salon_name2"
            android:layout_below="@+id/salon_image2"
            android:layout_marginLeft="50dp"
            android:text="Rudy Salon"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/salon_address3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salon_address2"
            android:layout_toRightOf="@+id/salon_address2"
            android:layout_below="@+id/salon_name2"
            android:layout_marginLeft="45dp"
            android:text="Kelapa Gading"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/salon_reviewer_total3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/salon_reviewer_total2"
            android:layout_toRightOf="@+id/salon_reviewer_total2"
            android:layout_below="@+id/salon_address2"
            android:layout_marginLeft="50dp"
            android:paddingLeft="@dimen/content_padding"
            android:text="400 reviewer"
            android:textColor="@color/black_50_opacity"
            android:textSize="12dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>