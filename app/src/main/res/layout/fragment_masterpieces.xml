<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MasterpiecesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/stylish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stylish" />

    <TextView
        android:id="@+id/seeOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Others"
        android:layout_toRightOf="@+id/promotion"
        android:layout_toEndOf="@+id/promotion"
        android:paddingLeft="340dp"/>


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/salon_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher"
            android:src="@drawable/men1" />


        <ImageView
            android:id="@+id/salon_image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@+id/salon_image"
            android:layout_toRightOf="@+id/salon_image"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:src="@drawable/men1" />



        <ImageView
            android:id="@+id/salon_image3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@+id/salon_image2"
            android:layout_toRightOf="@+id/salon_image2"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:src="@drawable/men1" />


    </RelativeLayout>

</android.support.v7.widget.CardView>