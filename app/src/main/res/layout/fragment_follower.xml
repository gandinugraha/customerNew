<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mrrobot.customernew.fragment.FollowerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/content_padding"
        android:paddingLeft="@dimen/content_padding"
        android:paddingRight="@dimen/content_padding"
        android:paddingTop="@dimen/content_padding">

        <ImageView
            android:id="@+id/vh_stylish_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/vh_thursday_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/vh_stylish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/vh_stylish_image"
            android:layout_toRightOf="@+id/vh_stylish_image"
            android:text="Andrew Tooy"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/vh_mst_pieces_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Follow"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/vh_monday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vh_stylish_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/vh_stylish_image"
            android:layout_toRightOf="@+id/vh_stylish_image"
            android:text="10 Reviews" />

        <TextView
            android:id="@+id/vh_tuesday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_monday_label"
            android:layout_alignStart="@+id/vh_monday_label"
            android:layout_below="@+id/vh_monday_label"
            android:text="10 Months" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
