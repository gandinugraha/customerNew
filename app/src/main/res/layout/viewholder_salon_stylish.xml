<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/center"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/content_padding"
        android:paddingLeft="@dimen/content_padding"
        android:paddingRight="@dimen/content_padding"
        android:paddingTop="@dimen/content_padding">

        <ImageView
            android:id="@+id/vh_stylish_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/vh_stylish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/vh_stylish_image"
            android:layout_toRightOf="@+id/vh_stylish_image"
            android:text="Andrew Tooy"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/vh_mst_pieces_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Masterpieces"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/vh_monday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vh_stylish_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/vh_stylish_image"
            android:layout_toRightOf="@+id/vh_stylish_image"
            android:text="Mon" />

        <TextView
            android:id="@+id/vh_stylish_mon_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vh_monday_label"
            android:layout_alignBottom="@+id/vh_monday_label"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/vh_monday_label"
            android:layout_toRightOf="@+id/vh_monday_label"
            android:text="11.30 to 22.00" />

        <TextView
            android:id="@+id/vh_tuesday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_monday_label"
            android:layout_alignStart="@+id/vh_monday_label"
            android:layout_below="@+id/vh_monday_label"
            android:text="Tue" />

        <TextView
            android:id="@+id/vh_stylish_tue_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_stylish_mon_work_hour"
            android:layout_alignStart="@+id/vh_stylish_mon_work_hour"
            android:layout_below="@+id/vh_monday_label"
            android:text="11.30 to 22.00" />

        <TextView
            android:id="@+id/vh_wednesday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_tuesday_label"
            android:layout_alignStart="@+id/vh_tuesday_label"
            android:layout_below="@+id/vh_tuesday_label"
            android:text="Wed" />

        <TextView
            android:id="@+id/vh_stylish_wed_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_stylish_mon_work_hour"
            android:layout_alignStart="@+id/vh_stylish_mon_work_hour"
            android:layout_below="@+id/vh_tuesday_label"
            android:text="11h30m to 22h" />

        <TextView
            android:id="@+id/vh_thursday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_wednesday_label"
            android:layout_alignStart="@+id/vh_wednesday_label"
            android:layout_below="@+id/vh_wednesday_label"
            android:text="Thu" />

        <TextView
            android:id="@+id/vh_stylish_thu_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_stylish_mon_work_hour"
            android:layout_alignStart="@+id/vh_stylish_mon_work_hour"
            android:layout_below="@+id/vh_wednesday_label"
            android:text="11h30m to 22h" />

        <TextView
            android:id="@+id/vh_friday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vh_stylish_mon_work_hour"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/vh_stylish_mon_work_hour"
            android:layout_toRightOf="@+id/vh_stylish_mon_work_hour"
            android:text="Fri" />

        <TextView
            android:id="@+id/vh_stylish_fri_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vh_friday_label"
            android:layout_alignBottom="@+id/vh_friday_label"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/vh_friday_label"
            android:layout_toRightOf="@+id/vh_friday_label"
            android:text="11h30m to 22h" />

        <TextView
            android:id="@+id/vh_saturday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_friday_label"
            android:layout_alignStart="@+id/vh_friday_label"
            android:layout_below="@+id/vh_friday_label"
            android:text="Sat" />

        <TextView
            android:id="@+id/vh_stylish_sat_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_stylish_fri_work_hour"
            android:layout_alignStart="@+id/vh_stylish_fri_work_hour"
            android:layout_below="@+id/vh_friday_label"
            android:text="11h30m to 22h" />

        <TextView
            android:id="@+id/vh_sunday_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_saturday_label"
            android:layout_alignStart="@+id/vh_saturday_label"
            android:layout_below="@+id/vh_saturday_label"
            android:text="Sun" />

        <TextView
            android:id="@+id/vh_stylish_sun_work_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vh_stylish_fri_work_hour"
            android:layout_alignStart="@+id/vh_stylish_fri_work_hour"
            android:layout_below="@+id/vh_saturday_label"
            android:text="11h30m to 22h" />

    </RelativeLayout>

</android.support.v7.widget.CardView>